{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet build",
        "type": "shell",
        "presentation": {
          "reveal": "silent"
        },
        "problemMatcher": "$msCompile",
        "options": {
          "cwd": "./src"
        }
      },
      {
        "label": "publish",
        "command": "dotnet publish",
        "dependsOn": "build",
        "type": "shell",
        "problemMatcher": [],
        "options": {
          "cwd": "./src"
        }
      },
      {
        "label": "run",
        "command": "func host start",
        "dependsOn": "publish",
        "type": "shell",
        "problemMatcher": [],
        "options": {
          "cwd": "./src"
        }
      },
      {
        "label": "Build (w/FAKE)",
        "command": "./build.cmd",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Publish (w/FAKE)",
        "command": "./build.cmd publish",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run (w/FAKE)",
        "command": "./build.cmd run",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }